---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tentang - Honai Coders - ITS">
    <main
        class="flex flex-col gap-y-6 py-10 lg:py-16 bg-white dark:bg-gray-900"
    >
        <div class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto">
            <div class="max-w-xl sm:mx-auto lg:max-w-2xl">
                <div class="flex flex-col mb-16 sm:text-center sm:mb-0">
                    <a href="/" class="mb-6 sm:mx-auto">
                        <div
                            class="flex items-center justify-center w-12 h-12 rounded-full bg-indigo-50"
                        >
                            <svg
                                class="w-10 h-10 text-deep-purple-accent-400"
                                stroke="currentColor"
                                viewBox="0 0 52 52"
                            >
                                <polygon
                                    stroke-width="3"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    fill="none"
                                    points="29 13 14 29 25 29 23 39 38 23 27 23"
                                ></polygon>
                            </svg>
                        </div>
                    </a>
                    <div
                        class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12"
                    >
                        <h2
                            class="max-w-lg mb-6 text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl md:mx-auto dark:text-white"
                        >
                            <span class="relative inline-block">
                                <svg
                                    viewBox="0 0 52 24"
                                    fill="currentColor"
                                    class="absolute top-0 left-0 z-0 hidden w-32 -mt-8 -ml-20 text-blue-gray-100 lg:w-32 lg:-ml-28 lg:-mt-10 sm:block"
                                >
                                    <defs>
                                        <pattern
                                            id="e77df901-b9d7-4b9b-822e-16b2d410795b"
                                            x="0"
                                            y="0"
                                            width=".135"
                                            height=".30"
                                        >
                                            <circle cx="1" cy="1" r=".7"
                                            ></circle>
                                        </pattern>
                                    </defs>
                                    <rect
                                        fill="url(#e77df901-b9d7-4b9b-822e-16b2d410795b)"
                                        width="52"
                                        height="24"></rect>
                                </svg>
                                <span class="relative">Honai</span>
                            </span>
                             Coders ITS
                        </h2>
                        <p class="text-base text-gray-700 md:text-lg dark:text-white">
                            Lorem ipsum dolor sit amet, consectetur adipisicing
                            elit. Praesentium numquam officiis omnis
                            voluptatibus, nihil vero.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
